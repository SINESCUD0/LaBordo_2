<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ModificarActividad">

    <EditText
        android:id="@+id/modifPrecio"
        android:layout_width="115dp"
        android:layout_height="51dp"
        android:layout_marginStart="276dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Precio"
        android:inputType="number"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/modifImagenTarea"
            android:layout_width="match_parent"
            android:layout_height="181dp"
            android:layout_weight="1"
            android:src="@android:drawable/ic_menu_gallery" />

    </LinearLayout>

    <EditText
        android:id="@+id/modifTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Titulo"
        android:inputType="textPersonName"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout" />

    <EditText
        android:id="@+id/modifDesc"
        android:layout_width="374dp"
        android:layout_height="310dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="160dp"
        android:layout_weight="1"
        android:gravity="top"
        android:hint="Descripcion"
        android:layout_centerHorizontal="true"
        android:inputType="textMultiLine"
        android:singleLine="false"
        android:layout_below="@+id/linearLayout" />

    <TextView
        android:id="@+id/modifFecha"
        android:layout_width="101dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Fecha"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/modifTitulo" />

    <Button
        android:id="@+id/modifBoton"
        android:layout_width="376dp"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="APLICAR" />

</RelativeLayout>
