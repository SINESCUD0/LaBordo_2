<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/layout_lista_profesorado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0">

        <ImageView
            android:id="@+id/fotoProfesor"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/sin_foto"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nombreProfesor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/montserrat_light"
                android:text="Nombre Profesor"
                android:textColor="@color/prueba"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/apellidos_profesor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="0dp"
                android:fontFamily="@font/open_sans"
                android:text="Apellidos"
                android:textColor="@color/prueba"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/instituto_profesor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/open_sans"
                android:text="Instituto"
                android:textColor="@color/prueba"
                android:textSize="15sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/dni_profesor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:textColor="@color/prueba"
                    android:text="DNI"
                    android:textSize="10sp"
                    android:layout_alignParentStart="true"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/correo_profesor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:text="Correo del Profesor"
                    android:textColor="@color/prueba"
                    android:textSize="10sp"
                    android:paddingEnd="10dp"
                    android:layout_alignParentEnd="true"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>