<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/layout_actividades_asignadas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:id="@+id/linear_padre"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/actividad"
                    android:layout_marginTop="18dp"/>

                <TextView
                    android:id="@+id/nombreTarea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="13dp"
                    android:fontFamily="@font/montserrat_light"
                    android:text="Nombre Tarea"
                    android:textColor="@color/prueba"
                    android:textSize="17sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/informacionTarea"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingEnd="10dp"
                    android:layout_marginBottom="0dp"
                    android:fontFamily="@font/open_sans"
                    android:text="Descripcion"
                    android:textSize="13sp"
                    android:textColor="@color/prueba" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_hijo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/precio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:layout_alignParentStart="true"
                    android:fontFamily="@font/open_sans"
                    android:text="Precio"
                    android:textColor="@color/prueba"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/monedas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" â‚¬"
                    android:layout_weight="2"
                    android:textColor="@color/prueba"
                    android:fontFamily="@font/open_sans"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/fechaLimite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:layout_marginRight="1dp"
                    android:paddingEnd="10dp"
                    android:fontFamily="@font/open_sans"
                    android:text="Fecha limite"
                    android:textSize="10sp"
                    android:textColor="@color/prueba"
                    android:layout_alignParentEnd="true"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>